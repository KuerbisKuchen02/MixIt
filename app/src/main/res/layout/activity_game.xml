<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:id="@+id/game_activity_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_arcade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_container_playground"
        app:cardElevation="4dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:layout_margin="16dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_arcade"
            android:name="de.thm.mixit.ui.fragments.ArcadeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_arcade" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_playground"
        android:name="de.thm.mixit.ui.fragments.PlaygroundFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/card_container_elementlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_container_arcade"
        tools:layout="@layout/fragment_playground" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container_elementlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="4dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        android:layout_margin="16dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_element_list"
            android:name="de.thm.mixit.ui.fragments.ElementListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_element_list" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>